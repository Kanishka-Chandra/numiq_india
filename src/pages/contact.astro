---
import ContactForm from "@components/Contact/ContactForm.astro";
import ContactInfo from "@components/Contact/ContactInfo.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout>
  <section
    class="space-y-6 overflow-hidden bg-teal-900 px-8 pt-20 pb-10 text-center md:px-16 md:pt-32 md:pb-20"
  >
    <h1 class="text-4xl font-bold text-gray-100 md:text-5xl">Get in Touch</h1>
    <p class="mx-auto mt-6 max-w-lg text-lg text-gray-400">
      Ready to optimize your financial operations? Contact our team for support.
    </p>
  </section>
  <section
    class="grid grid-cols-1 gap-x-16 gap-y-10 bg-gray-950 px-8 py-10 md:grid-cols-2 md:px-16 md:py-20"
  >
    <ContactInfo />
    <ContactForm />
  </section>
</Layout>
