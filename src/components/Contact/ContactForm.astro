---
import { ChevronDown } from "@lucide/astro";
---

<div
  class="relative overflow-hidden rounded-2xl border border-blue-100 bg-blue-50 p-8 shadow-2xl shadow-blue-900/10"
>
  <!-- Background Glow -->
  <div
    class="pointer-events-none absolute top-0 right-0 -mt-20 -mr-20 h-64 w-64 rounded-full bg-blue-50 blur-[80px]"
  >
  </div>
  <div
    class="pointer-events-none absolute bottom-0 left-0 -mb-20 -ml-20 h-64 w-64 rounded-full bg-blue-50 blur-[80px]"
  >
  </div>

  <div class="relative z-10">
    <h3 class="mb-6 text-xl font-bold text-gray-900">Send us a Message</h3>
    <form
      name="contact"
      method="POST"
      data-netlify="true"
      onsubmit="event?.preventDefault(); alert('Thank you. Your message has been sent to Numiq.');"
      class="space-y-6"
    >
      <div>
        <label for="name" class="mb-1 block text-sm font-medium text-blue-700">
          Full Name
        </label>
        <input
          type="text"
          id="name"
          required
          class="w-full rounded-lg border border-blue-200 bg-white px-4 py-3 text-gray-900 transition-colors focus:border-blue-600 focus:ring focus:ring-blue-600 focus:outline-none"
          placeholder="John Doe"
        />
      </div>

      <div>
        <label for="email" class="mb-1 block text-sm font-medium text-blue-700">
          Business Email
        </label>
        <input
          type="email"
          id="email"
          required
          class="w-full rounded-lg border border-blue-200 bg-white px-4 py-3 text-gray-900 transition-colors focus:border-blue-600 focus:ring focus:ring-blue-600 focus:outline-none"
          placeholder="john@company.com"
        />
      </div>

      <div>
        <label
          for="service"
          class="mb-1 block text-sm font-medium text-blue-700"
        >
          Service Requirement
        </label>
        <div class="relative">
          <select
            id="service"
            class="w-full appearance-none rounded-lg border border-blue-200 bg-white px-4 py-3 text-gray-900 transition-colors focus:border-blue-600 focus:ring focus:ring-blue-600 focus:outline-none"
          >
            <option value="" disabled selected class="text-blue-400"
              >Select a service...</option
            >
            <option value="tia-support"
              >Transaction & Investment Analysis Support</option
            >
            <option value="dashboarding-reporting"
              >Dashboarding, Reporting & Business Intelligence</option
            >
            <option value="accounting-bookkeeping"
              >Accounting & Bookkeeping Support</option
            >
            <option value="fpa-support"
              >Financial Planning & Analysis (FP&A)</option
            >
            <option value="other">Other / General Inquiry</option>
          </select>

          <div
            class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-blue-500"
          >
            <ChevronDown class="size-4" />
          </div>
        </div>
      </div>

      <div>
        <label
          for="message"
          class="mb-1 block text-sm font-medium text-blue-700"
        >
          Additional Remarks
        </label>
        <textarea
          id="message"
          rows="10"
          class="w-full rounded-lg border border-blue-200 bg-white px-4 py-3 text-gray-900 transition-colors focus:border-blue-600 focus:ring focus:ring-blue-600 focus:outline-none"
          placeholder="Please describe your specific requirements or challenges..."
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full transform rounded-full bg-blue-600 py-4 font-bold text-blue-50 shadow-lg transition-all hover:-translate-y-0.5 hover:bg-blue-700 hover:shadow-xl hover:shadow-blue-600/20"
      >
        Submit Request
      </button>
    </form>
  </div>
</div>
