---
import { ChevronDown } from "@lucide/astro";
---

<div
  class="rounded-xl border border-gray-100 bg-white p-8 shadow-[0_0_40px_-10px_rgba(0,0,0,0.1)]"
>
  <h3 class="mb-6 text-xl font-bold text-gray-900">Send us a Message</h3>
  <form
    onsubmit="event.preventDefault(); alert('Thank you. Your message has been sent to Numiq India.');"
    class="space-y-6"
  >
    <!--
    Netlify form:
      - name must match the hidden input "form-name" value
      - netlify-honeypot used to reduce spam (field name: bot-field)
      - Optional: set action="/thank-you" to redirect to a thank-you page
  -->
    <!-- <form
      name="contact"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
      class="space-y-6"
    >
  
   /*Required for Netlify to identify the form */
    <input type="hidden" name="form-name" value="contact" />

    /* Honeypot field (spam trap) */
    <p class="hidden">
      <label
        >Don't fill this out if you're human: <input name="bot-field" /></label
      >
    </p> -->

    <div>
      <label for="name" class="mb-1 block text-sm font-medium text-gray-700">
        Full Name
      </label>
      <input
        type="text"
        id="name"
        required
        class="focus:border-brand-600 focus:ring-brand-200 focus:ring-opacity-50 form-input w-full rounded-lg border border-gray-300 px-4 py-3 transition-colors focus:ring"
        placeholder="John Doe"
      />
    </div>

    <div>
      <label for="email" class="mb-1 block text-sm font-medium text-gray-700">
        Business Email
      </label>
      <input
        type="email"
        id="email"
        required
        class="focus:border-brand-600 focus:ring-brand-200 focus:ring-opacity-50 form-input w-full rounded-lg border border-gray-300 px-4 py-3 transition-colors focus:ring"
        placeholder="john@company.com"
      />
    </div>

    <div>
      <label for="service" class="mb-1 block text-sm font-medium text-gray-700">
        Service Requirement
      </label>
      <div class="relative">
        <select
          id="service"
          class="focus:border-brand-600 focus:ring-brand-200 focus:ring-opacity-50 form-input w-full appearance-none rounded-lg border border-gray-300 bg-white px-4 py-3 transition-colors focus:ring"
        >
          <option value="" disabled selected>Select a service...</option>
          <option value="tia-support"
            >Transaction & Investment Analysis Support</option
          >
          <option value="dashboarding-reporting"
            >Dashboarding, Reporting & Business Intelligence</option
          >
          <option value="accounting-bookkeeping"
            >Accounting & Bookkeeping Support</option
          >
          <option value="fpa-support"
            >Financial Planning & Analysis (FP&A)</option
          >
          <option value="analyst-extension"
            >Offshore Analyst & Team Extension</option
          >
          <option value="quality-review"
            >Quality Review & Documentation Support</option
          >
          <option value="other">Other / General Inquiry</option>
        </select>

        <div
          class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-500"
        >
          <ChevronDown class="size-4" />
        </div>
      </div>
    </div>

    <div>
      <label for="message" class="mb-1 block text-sm font-medium text-gray-700">
        Additional Remarks
      </label>
      <textarea
        id="message"
        rows="10"
        class="focus:border-brand-600 focus:ring-brand-200 focus:ring-opacity-50 form-input w-full rounded-lg border border-gray-300 px-4 py-3 transition-colors focus:ring"
        placeholder="Please describe your specific requirements or challenges..."
      ></textarea>
    </div>

    <button
      type="submit"
      class="bg-brand-800 hover:bg-brand-900 w-full transform rounded-lg py-4 font-bold text-white shadow-lg transition-all hover:-translate-y-0.5 hover:shadow-xl"
    >
      Submit Request
    </button>
  </form>
</div>
