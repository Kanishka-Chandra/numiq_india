---
import { ChevronDown } from "@lucide/astro";
---

<div
  class="relative overflow-hidden rounded-2xl border border-white/5 bg-[#1a1b26] p-8 shadow-2xl"
>
  <!-- Background Glow -->
  <div
    class="pointer-events-none absolute top-0 right-0 -mt-20 -mr-20 h-64 w-64 rounded-full bg-blue-600/10 blur-[80px]"
  >
  </div>
  <div
    class="pointer-events-none absolute bottom-0 left-0 -mb-20 -ml-20 h-64 w-64 rounded-full bg-blue-600/5 blur-[80px]"
  >
  </div>

  <div class="relative z-10">
    <h3 class="mb-6 text-xl font-bold text-white">Send us a Message</h3>
    <form
      onsubmit="event.preventDefault(); alert('Thank you. Your message has been sent to Numiq.');"
      class="space-y-6"
    >
      <div>
        <label for="name" class="mb-1 block text-sm font-medium text-slate-300">
          Full Name
        </label>
        <input
          type="text"
          id="name"
          required
          class="focus:ring-opacity-50 form-input w-full rounded-lg border border-white/10 bg-[#0b0c15]/50 px-4 py-3 text-white placeholder-slate-500 transition-colors focus:border-blue-500 focus:ring focus:ring-blue-500/20"
          placeholder="John Doe"
        />
      </div>

      <div>
        <label
          for="email"
          class="mb-1 block text-sm font-medium text-slate-300"
        >
          Business Email
        </label>
        <input
          type="email"
          id="email"
          required
          class="focus:ring-opacity-50 form-input w-full rounded-lg border border-white/10 bg-[#0b0c15]/50 px-4 py-3 text-white placeholder-slate-500 transition-colors focus:border-blue-500 focus:ring focus:ring-blue-500/20"
          placeholder="john@company.com"
        />
      </div>

      <div>
        <label
          for="service"
          class="mb-1 block text-sm font-medium text-slate-300"
        >
          Service Requirement
        </label>
        <div class="relative">
          <select
            id="service"
            class="focus:ring-opacity-50 form-input w-full appearance-none rounded-lg border border-white/10 bg-[#0b0c15]/50 px-4 py-3 text-white transition-colors focus:border-blue-500 focus:ring focus:ring-blue-500/20"
          >
            <option value="" disabled selected class="text-slate-500"
              >Select a service...</option
            >
            <option value="tia-support"
              >Transaction & Investment Analysis Support</option
            >
            <option value="dashboarding-reporting"
              >Dashboarding, Reporting & Business Intelligence</option
            >
            <option value="accounting-bookkeeping"
              >Accounting & Bookkeeping Support</option
            >
            <option value="fpa-support"
              >Financial Planning & Analysis (FP&A)</option
            >
            <option value="analyst-extension"
              >Offshore Analyst & Team Extension</option
            >
            <option value="quality-review"
              >Quality Review & Documentation Support</option
            >
            <option value="other">Other / General Inquiry</option>
          </select>

          <div
            class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-slate-500"
          >
            <ChevronDown class="size-4" />
          </div>
        </div>
      </div>

      <div>
        <label
          for="message"
          class="mb-1 block text-sm font-medium text-slate-300"
        >
          Additional Remarks
        </label>
        <textarea
          id="message"
          rows="10"
          class="focus:ring-opacity-50 form-input w-full rounded-lg border border-white/10 bg-[#0b0c15]/50 px-4 py-3 text-white placeholder-slate-500 transition-colors focus:border-blue-500 focus:ring focus:ring-blue-500/20"
          placeholder="Please describe your specific requirements or challenges..."
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full transform rounded-full bg-blue-600 py-4 font-bold text-white shadow-lg transition-all hover:-translate-y-0.5 hover:bg-blue-500 hover:shadow-xl hover:shadow-blue-500/20"
      >
        Submit Request
      </button>
    </form>
  </div>
</div>
