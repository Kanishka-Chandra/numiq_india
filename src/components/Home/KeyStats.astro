---
import { ChartPie, Landmark, Search, Shield, Users } from "@lucide/astro";

const stats = [
  {
    icon: ChartPie,
    title: "Smart Insights",
    description:
      "We use data to show you clearly how your business is doing and how to grow.",
  },
  {
    icon: Shield,
    title: "Stay Compliant",
    description:
      "We handle the rules and regulations so you stay safe and follow the law.",
  },
  {
    icon: Landmark,
    title: "Business Support",
    description:
      "We help you build and manage your business for the long run, anywhere in the world.",
  },
  {
    icon: Users,
    title: "Offshore Analyst",
    description:
      "We extend your team with flexible, high-quality offshore analytical support.",
  },
  {
    icon: Search,
    title: "Quality Review",
    description:
      "We review and refine models and documents to meet global quality standards.",
  },
];
---

<section class="z-20 -mt-8 w-full px-6">
  <div class="relative rounded-xl border-b border-gray-100 bg-white shadow-lg">
    <ul
      id="key-stats-container"
      class="grid grid-cols-2 gap-x-8 gap-y-10 px-4 py-10 text-center sm:grid-cols-4 sm:px-6 md:grid-cols-6 md:text-left lg:px-8"
    >
      {
        stats.map((stat) => {
          const Icon = stat.icon;
          return (
            <li data-aos="fade-up" class="col-span-2 flex h-full flex-col">
              <div class="mb-4 flex items-center justify-center md:justify-start">
                <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-blue-50 text-blue-700">
                  <Icon class="h-6 w-6" aria-hidden="true" />
                </div>
              </div>
              <h3 class="text-xl font-bold text-gray-900">{stat.title}</h3>
              <p class="mt-2 grow text-base leading-relaxed text-gray-600">
                {stat.description}
              </p>
            </li>
          );
        })
      }
    </ul>
  </div>

  <style>
    @media (width >= 40rem /* 640px */) and (width < 47.999rem /* 768px */) {
      #key-stats-container :nth-child(3n + 5):last-child {
        grid-column-start: 2;
      }
    }
    @media (width >= 48rem /* 768px */) {
      #key-stats-container:has(:nth-child(3n + 5):last-child)
        > :nth-last-child(2) {
        grid-column-start: 2;
      }
    }
  </style>
</section>
