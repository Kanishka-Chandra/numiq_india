---
import { ChartPie, Landmark, Shield } from "@lucide/astro";

const stats = [
  {
    icon: ChartPie,
    title: "Data-Driven Insights",
    description:
      "Leveraging advanced analytics to provide clear financial visibility and actionable growth strategies that drive performance.",
  },
  {
    icon: Shield,
    title: "Robust Compliance",
    description:
      "Ensuring strict adherence to evolving regulatory frameworks with meticulous, standards-based auditing and risk management.",
  },
  {
    icon: Landmark,
    title: "Corporate Advisory",
    description:
      "Strategic, long-term guidance for structuring entities, scaling operations, and optimizing business performance globally.",
  },
];
---

<div
  class="relative z-20 mx-4 -mt-8 max-w-7xl rounded-xl border-b border-gray-100 bg-white shadow-lg sm:mx-8 lg:mx-auto"
>
  <div class="px-4 py-10 sm:px-6 lg:px-8">
    <ul
      class="grid grid-cols-1 gap-8 divide-y divide-gray-100 text-center md:grid-cols-3 md:divide-x md:divide-y-0 md:text-left"
    >
      {
        stats.map((stat) => {
          const Icon = stat.icon;
          return (
            <li class="px-4 py-4 md:py-0">
              <Icon
                aria-hidden="true"
                class="text-brand-700 mb-3 inline-block h-8 w-8"
              />
              <h3 class="text-lg font-bold text-gray-900">{stat.title}</h3>
              <p class="mt-2 text-sm leading-relaxed text-gray-600">
                {stat.description}
              </p>
            </li>
          );
        })
      }
    </ul>
  </div>
</div>
