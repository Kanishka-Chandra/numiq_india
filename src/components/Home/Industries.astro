---
import { Building2, Factory, HandCoins, Laptop } from "@lucide/astro";

const sectors = [
  {
    title: "Technology & SaaS",
    description:
      "Optimizing revenue recognition, R&D credits, and scaling financial infrastructure for high-growth tech firms.",
    icon: Laptop,
  },
  {
    title: "Manufacturing",
    description:
      "Streamlining supply chain finance, inventory valuation, and cost accounting for operational efficiency.",
    icon: Factory,
  },
  {
    title: "Fintech & NBFCs",
    description:
      "Navigating complex regulatory compliance, risk management, and capital structuring support for financial innovators.",
    icon: HandCoins,
  },
  {
    title: "Real Estate",
    description:
      "Expertise in project finance support, REIT analysis, and tax implications for large-scale property developments.",
    icon: Building2,
  },
];
---

<section
  id="industries"
  class="relative space-y-20 overflow-hidden bg-gray-50 px-8 py-10 md:px-16 md:py-20"
>
  <div class="flex max-w-2xl flex-col items-start justify-between gap-6">
    <span
      class="text-brand-700 mb-3 text-sm font-bold tracking-wider uppercase"
    >
      Industries
    </span>
    <h2 class="text-4xl font-bold text-gray-900">Sectors We Support</h2>
    <p class="text-lg text-gray-600">
      Specialized financial expertise tailored to the unique challenges of
      dynamic industries.
    </p>
  </div>

  <div
    class="grid grid-cols-1 place-items-stretch gap-8 sm:grid-cols-2 md:grid-cols-4"
  >
    {
      sectors.map((sector) => {
        const Icon = sector.icon;
        return (
          <div class="group hover:bg-brand-900 hover:border-brand-900 relative flex cursor-default flex-col items-start justify-start rounded-xl border border-gray-100 bg-white p-8 shadow-sm transition-all duration-500 hover:shadow-xl">
            <div class="text-brand-700 mb-4 text-4xl transition-colors group-hover:text-white">
              <Icon />
            </div>
            <div>
              <h3 class="relative z-10 mb-3 text-xl font-bold text-gray-900 transition-colors group-hover:text-white">
                {sector.title}
              </h3>
              <p class="group-hover:text-brand-100 relative z-10 text-sm leading-relaxed text-gray-600 transition-colors">
                {sector.description}
              </p>
            </div>
          </div>
        );
      })
    }
  </div>
</section>

<style>
  #industries::before {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0.07;
    background-image: url("https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
    background-size: cover;
    background-position: center;
    filter: grayscale(100%);
  }
</style>
