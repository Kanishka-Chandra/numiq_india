---
import { Building2, Landmark, Rocket, TrendingUp } from "@lucide/astro";

const sectors = [
  {
    title: "Investment & Asset Management",
    description:
      "Strategic portfolio management and asset optimization for sustainable growth and long-term value creation.",
    icon: TrendingUp,
  },
  {
    title: "Banking, Capital Markets & Lending",
    description:
      "Comprehensive financial solutions for banking institutions, capital market operations, and lending structures.",
    icon: Landmark,
  },
  {
    title: "Advisory, Accounting & Real Assets",
    description:
      "Expert guidance in accounting standards, strategic advisory, and management of tangible real estate assets.",
    icon: Building2,
  },
  {
    title: "Entrepreneurs",
    description:
      "Empowering founders and startups with financial clarity, growth strategies, and operational scalability.",
    icon: Rocket,
  },
];
---

<section
  id="industries"
  class="relative space-y-10 overflow-hidden bg-white px-8 py-10 md:space-y-20 md:px-16 md:py-20"
>
  <div class="flex max-w-2xl flex-col items-start justify-between">
    <span
      class="mb-12 rounded-full border border-blue-600/20 bg-blue-50 px-3 py-1 text-xs font-bold tracking-wider text-blue-700 uppercase"
    >
      Who We Help
    </span>
    <h2 class="mb-6 text-3xl font-bold text-gray-900 md:text-5xl">
      <span class="text-blue-600">Expertise</span> for Every Industry
    </h2>
    <p class="text-lg text-gray-600">
      We understand the unique financial challenges of different businesses and
      how to solve them.
    </p>
  </div>

  <div
    class="grid grid-cols-1 place-items-stretch gap-8 sm:grid-cols-2 md:grid-cols-4"
  >
    {
      sectors.map((sector, index) => {
        const Icon = sector.icon;
        return (
          <div
            data-aos="fade-right"
            data-aos-delay={`${index * 200}`}
            class="group relative flex cursor-default flex-col items-start justify-start rounded-2xl border border-blue-200 bg-blue-50 p-8 shadow-sm transition-all duration-500 hover:border-blue-500 hover:bg-blue-600 hover:shadow-2xl hover:shadow-blue-900/50"
          >
            <div class="mb-6 text-4xl text-gray-600 transition-colors group-hover:text-gray-50">
              <Icon />
            </div>
            <div>
              <h3 class="relative z-10 mb-3 text-xl font-bold text-gray-900 transition-colors group-hover:text-gray-50">
                {sector.title}
              </h3>
              <p class="relative z-10 text-sm leading-relaxed text-gray-600 transition-colors group-hover:text-gray-50">
                {sector.description}
              </p>
            </div>
          </div>
        );
      })
    }
  </div>
</section>

<style>
  #industries::before {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0.1;
    background-image: url("https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
    background-size: cover;
    background-position: center;
    filter: grayscale(100%);
  }
</style>
