---
import { Calculator, ChartLine, Check, ChessKing, Scale } from "@lucide/astro";

const services = [
  {
    icon: ChessKing,
    title: "Transaction & Investment Analysis Support",
    description:
      "Specialized analytical support for private market funds, investment banks, and corporates. We assist your internal teams with robust financial models, valuation support, benchmarking studies, and high-quality materials for investment committees and management.",
    features: [
      "Financial Modeling & Valuation Support",
      "Benchmarking & Data Analysis",
      "IC Memos, Pitch Decks & Management Reports",
    ],
  },
  {
    icon: ChartLine,
    title: "Dashboarding, Reporting & Business Intelligence",
    description:
      "Clear, decision-ready insights through Excel and BI-driven dashboards. We structure, analyze, and visualize operational and financial data to help clients monitor performance and make informed strategic decisions.",
    features: [
      "Custom Excel / BI Dashboards",
      "Performance & Trend Analysis",
      "Management Reporting Packs",
    ],
  },
  {
    icon: Calculator,
    title: "Accounting & Bookkeeping Support",
    description:
      "End-to-end back-office accounting assistance designed to maintain accuracy and operational continuity. We support clients with core accounting workflows, reconciliations, and periodic management accounts.",
    features: [
      "GL, AP/AR & Reconciliations",
      "Month-End Close Activities",
      "Management Accounts Preparation",
    ],
  },
  {
    icon: Scale,
    title: "Financial Planning & Analysis (FP&A)",
    description:
      "Structured FP&A support to strengthen internal planning processes. We assist with budgets, forecasts, variance analysis, and KPI reporting to help clients track performance and plan ahead with greater clarity.",
    features: [
      "Budgeting & Forecasting",
      "Cash Flow Modeling",
      "Variance & KPI Analysis",
    ],
  },
];
---

<section
  class="space-y-20 bg-[#0b0c15] px-8 py-20 md:px-16 md:py-32"
  id="services"
>
  <div class="flex max-w-4xl flex-col items-start justify-between gap-6">
    <span
      class="mb-3 rounded-full border border-blue-500/20 bg-blue-500/10 px-3 py-1 text-xs font-bold tracking-wider text-blue-400 uppercase"
    >
      Our Services
    </span>
    <h2 class="text-3xl font-bold text-white md:text-5xl">Services We Offer</h2>
    <p class="text-lg text-slate-400">
      Numiq's team-as-a-service model continually refines workflows, strengthen
      reporting structures, and enhance analytical depth - ensuring long-term
      efficiency and seamless collaboration with your in-house teams.
      <br />
      Our expertise lies in addressing the human resource challenges faced by clients
      by providing highly skilled professionals to support across the value chain.
      In short, our goal is to deliver value-add services for our clients and enable
      them to focus on their core competencies. Our uniquely layered team structure
      provides dedicated points of contact for daily operations as well as strategic
      discussions, ensuring proper quality control and service excellence.
    </p>
  </div>
  <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
    {
      services.map((service, index) => {
        const Icon = service.icon;
        return (
          <div
            data-aos="flip-left"
            data-aos="fade-up-right"
            data-aos-delay={`${index * 200}`}
            class="group relative overflow-hidden rounded-2xl border border-white/5 bg-[#1a1b26] p-10 shadow-sm transition-all duration-300 hover:-translate-y-2 hover:border-blue-500/30 hover:shadow-2xl hover:shadow-blue-900/10"
          >
            {/* <!-- Card Glow --> */}
            <div class="absolute top-0 right-0 -mt-16 -mr-16 h-32 w-32 rounded-full bg-blue-500/10 blur-[50px] transition-all group-hover:bg-blue-500/20" />

            <div
              class="mb-8 flex h-14 w-14 items-center justify-center rounded-xl bg-blue-500/10 text-2xl text-blue-400 shadow-sm transition-all duration-300 group-hover:scale-110 group-hover:bg-blue-600 group-hover:text-white"
              aria-hidden="true"
            >
              <Icon class="size-7" aria-hidden="true" />
            </div>

            <h2 class="mb-4 text-2xl font-bold text-white transition-colors group-hover:text-blue-400">
              {service.title}
            </h2>

            <p class="mb-8 text-base leading-relaxed text-slate-400 transition-colors group-hover:text-slate-300">
              {service.description}
            </p>

            <ul class="space-y-3 text-sm text-slate-500">
              {service.features.map((feature) => (
                <li class="flex items-center gap-3">
                  <div class="flex size-5 items-center justify-center rounded-full bg-blue-500/10 text-blue-400">
                    <Check class="size-3" aria-hidden="true" />
                  </div>
                  <span class="transition-colors group-hover:text-slate-400">
                    {feature}
                  </span>
                </li>
              ))}
            </ul>
          </div>
        );
      })
    }
  </div>
</section>
