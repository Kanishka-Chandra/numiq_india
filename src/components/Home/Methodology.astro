---
import { ChessKnight, Cog, Search, TrendingUp } from "@lucide/astro";

const steps = [
  {
    number: "01",
    icon: Search,
    title: "In-Depth Discovery",
    text: "We begin by deeply immersing ourselves in your business model, historical financial data, and operational challenges to establish a complete baseline.",
  },
  {
    number: "02",
    icon: ChessKnight,
    title: "Strategic Planning",
    text: "Our senior experts formulate a tailored financial roadmap, identifying key efficiencies, potential risks, and critical compliance requirements.",
  },
  {
    number: "03",
    icon: Cog,
    title: "Precise Execution",
    text: "We deploy solutions with meticulous attention to detail, utilizing advanced financial tools for accurate accounting, auditing, and reporting.",
  },
  {
    number: "04",
    icon: TrendingUp,
    title: "Continuous Optimization",
    text: "Our partnership is ongoing. We provide continuous monitoring and refinement to adapt your strategy to market changes and regulatory updates.",
  },
];
---

<section
  class="bg-brand-50/50 relative overflow-hidden px-8 py-10 before:absolute before:inset-0 before:-z-10 before:bg-[linear-gradient(to_right,#e5e7eb_1px,transparent_1px),linear-gradient(to_bottom,#e5e7eb_1px,transparent_1px)] before:bg-size-[40px_40px] before:opacity-30 after:absolute after:inset-0 after:-z-20 after:bg-[url('https://images.unsplash.com/photo-1512758017271-d7b84c2113f1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80')] after:bg-cover after:bg-center after:opacity-7 after:grayscale md:px-16 md:py-20"
>
  <div class="mx-auto mb-16 max-w-3xl text-center">
    <h2 class="text-brand-700 mb-3 text-sm font-bold tracking-wider uppercase">
      Our Methodology
    </h2>
    <h3 class="mb-4 text-3xl font-bold text-gray-900">
      The Numiq Standard of Delivery
    </h3>
    <p class="text-lg text-gray-600">
      A rigorous, four-step methodology designed to ensure precision, maximize
      value, and mitigate risk for every client engagement.
    </p>
  </div>
  <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-4">
    {
      steps.map((step) => {
        const Icon = step.icon;
        return (
          <div class="group hover-card relative rounded-xl border border-gray-100 bg-white p-8 shadow-sm">
            <div class="flex items-start justify-between">
              <div class="bg-brand-100 text-brand-700 flex size-14 items-center justify-center rounded-lg text-2xl">
                <Icon />
              </div>
              <div class="group-hover:text-brand-50 text-5xl font-bold text-gray-100 transition-colors select-none">
                {step.number}
              </div>
            </div>

            <h4 class="mt-6 mb-2 text-xl font-bold text-gray-900">
              {step.title}
            </h4>
            <p class="leading-relaxed text-gray-600">{step.text}</p>
          </div>
        );
      })
    }
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image:
      linear-gradient(to right, #e5e7eb 1px, transparent 1px),
      linear-gradient(to bottom, #e5e7eb 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .hover-card {
    transition: all 0.3s ease;
  }
  .hover-card:hover {
    box-shadow:
      0 10px 25px -5px rgba(0, 0, 0, 0.1),
      0 8px 10px -6px rgba(0, 0, 0, 0.01);
    transform: translateY(-4px);
  }
</style>
