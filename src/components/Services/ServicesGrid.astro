---
import {
  Calculator,
  ChartLine,
  Check,
  ChessKing,
  Scale,
  Search,
  Users,
} from "@lucide/astro";

const services = [
  {
    icon: ChessKing,
    title: "Virtual CFO & Strategic Advisory",
    description:
      "High-level financial leadership without the full-time overhead. We handle cash flow management, budgeting, financial modeling, and strategic planning to guide your business decisions.",
    features: [
      "Cash Flow Optimization",
      "Financial Health Checks",
      "Investor Readiness",
    ],
  },
  {
    icon: ChartLine,
    title: "Financial Reporting & Analytics (MIS)",
    description:
      "Transforming raw data into actionable business intelligence. We design and implement customized MIS dashboards that track KPIs and operational performance.",
    features: [
      "Monthly Performance Reports",
      "Variance Analysis",
      "Profitability Tracking",
    ],
  },
  {
    icon: Calculator,
    title: "Accounting & Operational Finance",
    description:
      "The foundation of your financial health. We ensure precise recording of day-to-day transactions, maintaining pristine books that stand up to any audit.",
    features: [
      "Bookkeeping & Reconciliations",
      "Accounts Payable/Receivable",
      "Fixed Asset Management",
    ],
  },
  {
    icon: Scale,
    title: "Taxation & Regulatory Compliance",
    description:
      "Navigating the complex landscape of direct and indirect taxes. We ensure timely filings and strategic tax optimization to protect your bottom line.",
    features: [
      "GST Filing & Compliance",
      "Income Tax Returns (Corporate/Individual)",
      "TDS/TCS Compliance",
    ],
  },
  {
    icon: Users,
    title: "Payroll & Compensation Management",
    description:
      "Seamless management of your human capital finances. We handle everything from salary structuring to final disbursement and statutory compliance.",
    features: [
      "Salary Processing",
      "PF & ESI Compliance",
      "Form 16 Generation",
    ],
  },
  {
    icon: Search,
    title: "Due Diligence & Valuation",
    description:
      "Critical support for M&A, fundraising, and restructuring. We provide independent valuations and rigorous financial due diligence reports.",
    features: ["Business Valuation", "M&A Due Diligence", "Financial Modeling"],
  },
];
---

<section class="bg-gray-50 px-8 py-10 md:px-16 md:py-20">
  <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
    {
      services.map((service) => {
        const Icon = service.icon;
        return (
          <div class="group rounded-xl border border-gray-100 bg-white p-8 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-lg">
            <div
              class="bg-brand-50 text-brand-700 group-hover:bg-brand-700 mb-6 flex h-14 w-14 items-center justify-center rounded-lg text-2xl transition-colors duration-300 group-hover:text-white"
              aria-hidden="true"
            >
              <Icon class="size-6" aria-hidden="true" />
            </div>

            <h2 class="mb-3 text-xl font-bold text-gray-900">
              {service.title}
            </h2>

            <p class="mb-4 text-sm leading-relaxed text-gray-600">
              {service.description}
            </p>

            <ul class="mb-6 space-y-2 text-sm text-gray-500">
              {service.features.map((feature) => (
                <li class="flex items-center gap-2">
                  <Check class="text-brand-500 size-4" aria-hidden="true" />
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
          </div>
        );
      })
    }
  </div>
</section>
