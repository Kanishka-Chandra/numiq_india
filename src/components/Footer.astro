    </div>

    <!-- Legal/Address -->
    <div class="flex flex-col space-y-6">
      <h4 class="text-sm font-bold tracking-wider text-gray-500 uppercase">
        Contact
      </h4>
      <ul class="space-y-4 text-sm text-gray-400">
        {
          [
            { label: "Telangana, India", icon: MapPin },
            { label: "info@numiq.in", icon: Mail },
            { label: "+91 40 1234 5678", icon: Phone },
          ].map((item) => {
            const Icon = item.icon;
            return (
              <li class="flex items-center gap-2">
                <Icon class="text-brand-600 size-4" />
                <span>{item.label}</span>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>

  <div
    class="flex flex-col-reverse items-center justify-between gap-4 border-t border-gray-900 py-4 text-sm text-gray-600 md:flex-row"
  >
    <p>&copy; 2025 Pranita Ventures LLP. All rights reserved.</p>
    <div class="flex items-center justify-center gap-6">
      {
        [
          { label: "Privacy Policy", href: "/privacy-policy" },
          { label: "Terms of Service", href: "/terms-of-service" },
        ].map((link) => (
          <a href={link.href} class="transition-colors hover:text-gray-400">
            {link.label}
          </a>
        ))
      }
    </div>
  </div>
</footer>
