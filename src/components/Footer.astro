---
import { Mail, MapPin, Phone } from "@lucide/astro";
---

<footer
  class="border-t border-teal-900/30 bg-gray-950 px-8 text-gray-100 md:px-16"
>
  <div
    class="flex flex-col items-start justify-between gap-6 py-20 md:flex-row"
  >
    <!-- Brand Column -->
    <div class="flex max-w-sm flex-col items-start justify-start gap-4">
      <a href="/" class="h-10 w-fit rounded-lg">
        <img src="/logo-dark.png" alt="Numiq Logo" class="size-full" />
      </a>
      <p class="mb-8 text-sm leading-relaxed text-gray-400">
        Empowering businesses globally with precision, integrity, and AI-driven
        strategic financial intelligence. Your trusted partner in sustainable
        growth and compliance.
      </p>
    </div>

    <!-- Legal/Address -->
    <div class="flex flex-col gap-4">
      <h4
        class="text-sm font-bold tracking-wider text-teal-400 uppercase md:text-base"
      >
        Contact
      </h4>
      <ul class="space-y-4 text-sm text-gray-400">
        {
          [
            { label: "Telangana, India", icon: MapPin },
            { label: "info@numiq.co", icon: Mail },
            { label: "+91 40 1234 5678", icon: Phone },
          ].map((item) => {
            const Icon = item.icon;
            return (
              <li class="flex items-center gap-2">
                <Icon class="size-4 text-teal-500" />
                <span>{item.label}</span>
              </li>
            );
          })
        }
      </ul>
    </div>
  </div>

  <div
    class="flex flex-col-reverse items-center justify-between gap-4 border-t border-teal-900/30 py-8 text-sm text-teal-500 md:flex-row"
  >
    <p>&copy; 2025 Pranita Ventures LLP (Numiq). All rights reserved.</p>
    <div class="flex items-center justify-center gap-6">
      {
        [
          { label: "Privacy Policy", href: "/privacy-policy" },
          { label: "Terms of Service", href: "/terms-of-service" },
        ].map((link) => (
          <a href={link.href} class="transition-colors hover:text-gray-100">
            {link.label}
          </a>
        ))
      }
    </div>
  </div>
</footer>
