---
import { Mail, MapPin, Phone } from "@lucide/astro";
---

<footer class="border-t border-white/5 bg-[#05060a] px-8 text-white md:px-16">
  <footer
    class="flex flex-col items-start justify-between gap-6 py-20 md:flex-row"
  >
    <!-- Brand Column -->
    <div class="flex max-w-sm flex-col items-start justify-start gap-4">
      <a href="/" class="h-10 w-fit rounded-lg bg-white/5 p-2">
        <img
          src="/logo.png"
          alt="Numiq Logo"
          class="size-full brightness-0 invert"
        />
      </a>
      <p class="mb-8 text-sm leading-relaxed text-slate-400">
        Empowering businesses globally with precision, integrity, and AI-driven
        strategic financial intelligence. Your trusted partner in sustainable
        growth and compliance.
      </p>
    </div>

    <!-- Legal/Address -->
    <div class="flex flex-col space-y-6">
      <h4 class="text-sm font-bold tracking-wider text-slate-500 uppercase">
        Contact
      </h4>
      <ul class="space-y-4 text-sm text-slate-400">
        {
          [
            { label: "Telangana, India", icon: MapPin },
            { label: "info@numiq.co", icon: Mail },
            { label: "+91 40 1234 5678", icon: Phone },
          ].map((item) => {
            const Icon = item.icon;
            return (
              <li class="flex items-center gap-2">
                <Icon class="size-4 text-blue-500" />
                <span>{item.label}</span>
              </li>
            );
          })
        }
      </ul>
    </div>
  </footer>

  <div
    class="flex flex-col-reverse items-center justify-between gap-4 border-t border-white/5 py-8 text-sm text-slate-600 md:flex-row"
  >
    <p>&copy; 2025 Pranita Ventures LLP (Numiq). All rights reserved.</p>
    <div class="flex items-center justify-center gap-6">
      {
        [
          { label: "Privacy Policy", href: "/privacy-policy" },
          { label: "Terms of Service", href: "/terms-of-service" },
        ].map((link) => (
          <a href={link.href} class="transition-colors hover:text-slate-300">
            {link.label}
          </a>
        ))
      }
    </div>
  </div>
</footer>
