---
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";

import "@styles/global.css";
import "aos/dist/aos.css";
import CommonHead from "./CommonHead.astro";
---

<html lang="en">
  <CommonHead />
  <body
    class="selection:bg-brand-100 selection:text-brand-900 overflow-x-hidden overflow-y-auto bg-white font-sans text-gray-900 antialiased *:mx-auto *:max-w-400"
  >
    <Navbar />
    <slot />
    <Footer />

    <script>
      import AOS from "aos";
      if (!window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
        AOS.init({
          disable: false,
          duration: 600,
          easing: "ease-in",
          once: true,
        });
      }
    </script>
  </body>
</html>
